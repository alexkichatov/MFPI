<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.groupsavings" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="org.groupsavings.activities.LoginActivity"
            android:label="@string/title_activity_login">
            android:screenOrientation="landscape" >
            <!-- Only avoid for debugging. uncomment when releasing
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>

        <activity
        android:name=".activities.GroupsGridActivity"
        android:label="@string/title_activity_groups_grid"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AddGroupActivity"
            android:label="@string/title_activity_add_group" />

        <activity
            android:name=".activities.GroupLandingActivity"
            android:label="@string/title_activity_group_landing"
            android:screenOrientation="landscape" />

        <activity
            android:name=".activities.AddMeetingActivity"
            android:label="@string/title_activity_add_meeting"
            android:screenOrientation="landscape" />

    </application>

</manifest>
