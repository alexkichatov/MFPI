<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/layout_member_uid" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="First Name :"
            android:autoText="false"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_member_firstname"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="Last Name :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_member_lastname"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="Contact :"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_member_contact"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="Age :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_member_age"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="Building No:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_member_addressline1"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="Street :"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_member_addressline2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="Savings :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_member_savings"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:padding="8dp"
            android:background="#dfe2e2" />
    </LinearLayout>

</LinearLayout>